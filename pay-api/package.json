{
  "name": "@midnight-pay/pay-api",
  "version": "0.1.0",
  "description": "MidnightPay - API Layer for Privacy-Preserving Payment Gateway",
  "author": "Midnight Developer",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --noEmit --project tsconfig.test.json",
    "typecheck:all": "npm run typecheck && npm run typecheck:test",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "RUN_STANDALONE=true vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@midnight-pay/pay-contract": "file:../pay-contract",
    "@midnight-ntwrk/compact-runtime": "^0.8.1",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "testcontainers": "^10.9.0",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0",
    "rxjs": "^7.8.2",
    "pino": "^8.16.0"
  },
  "files": [
    "dist/"
  ]
}